@model IEnumerable<UniversityCourseAndResultManagementSystem.Models.Teacher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Teachers of All Department</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeacherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNo)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Designation.DesignationInfo)*@
            @Html.DisplayName("Designation")
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Department.DepartmentCode)*@
            @Html.DisplayName("Department")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreditToBeTaken)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>


        <td>
            @Html.DisplayFor(modelItem => item.TeacherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Designation.DesignationInfo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.DepartmentCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreditToBeTaken)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TeacherId }) |
            @Html.ActionLink("Details", "Details", new { id = item.TeacherId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TeacherId })
        </td>
    </tr>
}

</table>
